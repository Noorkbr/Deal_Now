<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".startedFragment"
    android:background="@drawable/getstartbackground">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5E000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:text="      You want\n Authentic, here\n        you go!"
        android:textStyle="bold"
        android:textAppearance="@style/welcome_bac"
        android:fontFamily="@font/arbutus"

        android:textColor="@color/white"

        />
    <TextView
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/find_it_here_buy_it_now"
        android:textAppearance="@style/amet_minim2_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getstartedbtn"
        android:layout_width="350dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.92"


        android:text="@string/get_startedx"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:backgroundTint="#F83758"
        />




</androidx.constraintlayout.widget.ConstraintLayout>